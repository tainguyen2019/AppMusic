<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearLayoutCardViewAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewAlbum"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:id="@+id/textViewTitleAlbum"
            android:text="Khi nguoi lon co don"
            android:textColor="#000000"
            android:textSize="20sp"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewSinger"
            android:textSize="15sp"
            android:textColor="#9C9191"
            android:maxWidth="200dp"
            android:text="No Singer"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</androidx.cardview.widget.CardView>
