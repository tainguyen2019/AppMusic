<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp">
    <TextView
        android:id="@+id/textviewplaynhacindex"
        android:textColor="#ffff"
        android:layout_margin="8dp"
        android:text="1"
        android:textSize="18sp"
        android:layout_width="20dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="18sp"
        android:textColor="#ffff"
        android:text="Ten ca si"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:ellipsize="end"
        android:id="@+id/textviewplaytenbaihat"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/textviewplaynhacindex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="12sp"
        android:textColor="#ffff"
        android:text="ca si"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@id/textviewplaynhacindex"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/textviewplaytenbaihat"
        android:id="@+id/textviewplaynhactencasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>