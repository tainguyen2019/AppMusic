<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeChuDeTheLoai"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTitleChuDeTheLoai"
            android:text="CHỦ ĐỀ VÀ THỂ LOẠI"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_ViewMore"
            android:layout_alignParentRight="true"
            android:textColor="#93379C"
            android:textSize="18sp"
            android:text="Xem thêm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/horizoltalScrollView"
        android:scrollbars="none"
        android:layout_below="@id/relativeChuDeTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>
