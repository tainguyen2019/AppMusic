<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageViewBackgroundBanner"
        android:background="@drawable/custom_background_banner"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <RelativeLayout
        android:id="@+id/relative_banner"
        android:layout_alignBottom="@id/imageViewBackgroundBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewSongBanner"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/textViewTitleSongBanner"
            android:text="See you again"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_toRightOf="@id/imageViewSongBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@id/imageViewSongBanner"/>

        <RelativeLayout
            android:layout_below="@id/textViewTitleSongBanner"
            android:layout_toRightOf="@id/imageViewSongBanner"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewContenBanner"
                android:text="The best of song. See you again See you again See you again See you again"
                android:maxLines="2"
                android:textColor="#ffffff"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
